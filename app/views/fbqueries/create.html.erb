<%= link_to 'Back', fbqueries_path(:query => @query) %>

<% if @query %>
  <h5><%= @query %></h5>
  <hr>
<% end %>

<% if @result && !@result.empty? %>
  <spam><%= @result.length %> Records found</spam>
  <hr/>

  <% @result.each do |r| %>
    <% r.each do |key, value| %>
      <spam><%= key %></spam> = <spam><%= value %></spam><br/>
    <% end %>
    
    <hr/>
  <% end %>
<% else %>
  <h5>Nothing found =/</h5>
<% end %>