<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <hr/>
<% end %>

<%= form_tag uploads_path, :multipart => true do %>
  <label for="file">Photo to Upload</label> <%= file_field_tag "photo" %><br/><hr/>
  <%= submit_tag "Post photo" %>
<% end %>

<hr/>

<% if @photo %>
  <%= link_to image_tag(@photo.photo_path_for_view, :title => 'Send to Facebook'), "/uploads/#{@photo.id}/facebook" %>
  <hr/>
<% end %>

<%= link_to 'Home', root_path %>